{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "1.0",
  "description": "Assistant for QA testing",
  
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://localhost:11434/*",
    "<all_urls>"
  ],
  
  "action": {
    "default_title": "QA Testing Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.bundle.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src * http://localhost:11434 ws://localhost:11434"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}