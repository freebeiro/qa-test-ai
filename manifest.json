{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "1.0",
  "description": "AI-powered QA testing automation with natural language understanding",
  
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "web_accessible_resources": [{
    "resources": [
      "patterns.json",
      "actions.json"
    ],
    "matches": ["<all_urls>"]
  }]
}