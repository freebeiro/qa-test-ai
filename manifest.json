{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "1.0",
  "description": "Assistant for QA testing",
  
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  
  "action": {
    "default_title": "A Testing Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.bundle.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "background": {
    "service_worker": "background.bundle.js"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src * http://localhost:11434 ws://localhost:11434 http://localhost:9222 ws://localhost:9222"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
