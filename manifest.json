{
  "manifest_version": 3,
  "name": "QA Testing Assistant",
  "version": "1.0",
  "description": "Assistant for QA testing",
  
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "action": {
    "default_title": "QA Testing Assistant"
  },

  "background": {
    "service_worker": "background.js"
  }
}