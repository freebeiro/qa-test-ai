{
    "handlers": {
        "navigation": {
            "commands": ["open"],
            "parameters": ["url"],
            "verification": {
                "type": "pageLoad",
                "timeout": 10000
            }
        },
        "input": {
            "commands": ["type"],
            "parameters": ["text", "target"],
            "verification": {
                "type": "elementState",
                "condition": "hasValue",
                "timeout": 5000
            }
        },
        "click": {
            "commands": ["click"],
            "parameters": ["target"],
            "verification": {
                "type": "elementState",
                "condition": "wasClicked",
                "timeout": 5000
            }
        },
        "search": {
            "commands": ["type", "click"],
            "parameters": ["query", "searchBox", "searchButton"],
            "verification": {
                "type": "searchResults",
                "timeout": 10000
            }
        },
        "addToCart": {
            "commands": ["click"],
            "parameters": ["addToCartButton"],
            "verification": {
                "type": "cartUpdated",
                "timeout": 5000
            }
        }
    },
    "verifications": {
        "pageLoad": {
            "strategies": [
                "documentReady",
                "networkIdle",
                "elementPresent"
            ],
            "timeout": 10000
        },
        "elementState": {
            "strategies": [
                "elementPresent",
                "elementVisible",
                "elementEnabled"
            ],
            "timeout": 5000
        },
        "searchResults": {
            "strategies": [
                "resultsContainerPresent",
                "resultsPopulated",
                "searchComplete"
            ],
            "timeout": 10000
        },
        "cartUpdated": {
            "strategies": [
                "cartIndicatorUpdated",
                "confirmationDisplayed"
            ],
            "timeout": 5000
        }
    },
    "selectors": {
        "dynamic": {
            "searchBox": [
                "[type='search']",
                "[aria-label*='search']",
                "[placeholder*='search']",
                "[name*='search']"
            ],
            "searchButton": [
                "[type='submit']",
                "button[aria-label*='search']",
                "button[title*='search']"
            ],
            "addToCartButton": [
                "[aria-label*='add to cart']",
                "[title*='add to cart']",
                "button:contains('Add to Cart')"
            ]
        }
    }
}